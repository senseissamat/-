class Employee:
    """
    “ö—ã–∑–º–µ—Ç–∫–µ—Ä –∫–ª–∞—Å—ã. –ñ–∞–ª–∞“õ—ã–Ω—ã –∏–Ω–∫–∞–ø—Å—É–ª—è—Ü–∏—è–ª–∞—É “Ø—à—ñ–Ω
    @property (getter) –∂”ô–Ω–µ @setter “õ–æ–ª–¥–∞–Ω—ã–ª–∞–¥—ã.
    """

    def __init__(self, name, position, salary):
        # 1. –ê—Ç—ã –º–µ–Ω “õ—ã–∑–º–µ—Ç—ñ (public)
        self.name = name
        self.position = position

        # 2. –ñ–∞–ª–∞“õ—ã–Ω—ã –æ—Ä–Ω–∞—Ç—É “Ø—à—ñ–Ω @setter-–¥—ñ —à–∞“õ—ã—Ä–∞–º—ã–∑
        # –ë“±–ª –±–∞—Å—Ç–∞–ø“õ—ã –º”ô–Ω–¥—ñ —Ç–µ–∫—Å–µ—Ä—É–≥–µ –º“Ø–º–∫—ñ–Ω–¥—ñ–∫ –±–µ—Ä–µ–¥—ñ.
        self.salary = salary

        # --- GETTER (–ê–ª—É—à—ã) ---

    @property
    def salary(self):
        """“ö—ã–∑–º–µ—Ç–∫–µ—Ä–¥—ñ“£ –∂–∞–ª–∞“õ—ã—Å—ã–Ω –∞–ª—É “Ø—à—ñ–Ω getter."""
        # –Ü—à–∫—ñ, private –∞—Ç—Ä–∏–±—É—Ç—Ç—ã “õ–∞–π—Ç–∞—Ä–∞–¥—ã
        return self.__salary

    # --- SETTER (–û—Ä–Ω–∞—Ç—É—à—ã) ---
    @salary.setter
    def salary(self, new_salary):
        """–ñ–∞–ª–∞“õ—ã–Ω—ã “õ–∞—É—ñ–ø—Å—ñ–∑ —Ç“Ø—Ä–¥–µ –æ—Ä–Ω–∞—Ç—É “Ø—à—ñ–Ω setter."""

        # 1. –î–µ—Ä–µ–∫—Ç–µ—Ä —Ç–∏–ø—ñ–Ω —Ç–µ–∫—Å–µ—Ä—É
        if not isinstance(new_salary, (int, float)):
            raise TypeError("“ö–∞—Ç–µ: –ñ–∞–ª–∞“õ—ã —Å–∞–Ω —Ç“Ø—Ä—ñ–Ω–¥–µ (int/float) –±–æ–ª—É—ã –∫–µ—Ä–µ–∫.")

        # 2. –ë–∏–∑–Ω–µ—Å-–ª–æ–≥–∏–∫–∞–Ω—ã —Ç–µ–∫—Å–µ—Ä—É
        if new_salary <= 0:
            raise ValueError("“ö–∞—Ç–µ: –ñ–∞–ª–∞“õ—ã –Ω”©–ª–¥–µ–Ω “Ø–ª–∫–µ–Ω –±–æ–ª—É—ã –∫–µ—Ä–µ–∫!")

        # –¢–µ–∫—Å–µ—Ä—É–¥–µ–Ω ”©—Ç–∫–µ–Ω–Ω–µ–Ω –∫–µ–π—ñ–Ω “ì–∞–Ω–∞ private –∞—Ç—Ä–∏–±—É—Ç—Ç—ã –∂–∞“£–∞—Ä—Ç–∞–º—ã–∑
        self.__salary = new_salary
        # print(f"–ñ–∞–ª–∞“õ—ã {new_salary} —Ç–≥-–≥–µ –∂–∞“£–∞—Ä—Ç—ã–ª–¥—ã.")

    def give_raise(self, percentage):
        """–ñ–∞–ª–∞“õ—ã–Ω—ã –ø–∞–π—ã–∑–¥—ã“õ ”©—Å—ñ—Ä—É ”ô–¥—ñ—Å—ñ."""
        if percentage > 0:
            old_salary = self.salary  # Getter —à–∞“õ—ã—Ä—ã–ª–∞–¥—ã
            raise_amount = old_salary * (percentage / 100)

            # Setter —à–∞“õ—ã—Ä—ã–ª–∞–¥—ã, –∂–∞“£–∞ –º”ô–Ω —Ç–µ–∫—Å–µ—Ä—ñ–ª–µ–¥—ñ
            self.salary = old_salary + raise_amount

            print(f"‚úîÔ∏è –ñ–∞–ª–∞“õ—ã {percentage}%-“ì–∞ ”©—Å—Ç—ñ. –ñ–∞“£–∞ –∂–∞–ª–∞“õ—ã: {self.salary} —Ç–≥")
        else:
            print("‚ùå “ö–∞—Ç–µ: ”®—Å—ñ–º –ø–∞–π—ã–∑—ã –æ“£ —Å–∞–Ω –±–æ–ª—É—ã –∫–µ—Ä–µ–∫.")

    def __str__(self):
        """print() —Ñ—É–Ω–∫—Ü–∏—è—Å—ã —à–∞“õ—ã—Ä—ã–ª“ì–∞–Ω–¥–∞ –Ω—ã—Å–∞–Ω —Ç—É—Ä–∞–ª—ã –∞“õ–ø–∞—Ä–∞—Ç—Ç—ã “õ–∞–π—Ç–∞—Ä–∞–¥—ã."""
        return (f"================================\n"
                f"–ê—Ç—ã-–∂”©–Ω—ñ: {self.name}\n"
                f"“ö—ã–∑–º–µ—Ç—ñ: {self.position}\n"
                f"–ñ–∞–ª–∞“õ—ã—Å—ã: {self.salary} —Ç–≥\n"
                f"================================")


# --- –ö–ª–∞—Å—Ç—ã –ø–∞–π–¥–∞–ª–∞–Ω—É –º—ã—Å–∞–ª–¥–∞—Ä—ã ---
if __name__ == "__main__":
    try:
        # 1. –ñ–∞“£–∞ “õ—ã–∑–º–µ—Ç–∫–µ—Ä –Ω—ã—Å–∞–Ω—ã–Ω –¥“±—Ä—ã—Å –º”ô–Ω–º–µ–Ω “õ“±—Ä—É
        emp1 = Employee("–ê–π–∂–∞–Ω “ö–∞–¥—ã—Ä–æ–≤–∞", "–ë–∞“ì–¥–∞—Ä–ª–∞–º–∞—à—ã", 350000)
        print("‚úÖ “ö—ã–∑–º–µ—Ç–∫–µ—Ä –Ω—ã—Å–∞–Ω—ã —Å”ô—Ç—Ç—ñ “õ“±—Ä—ã–ª–¥—ã.")
        print(emp1)

        # 2. –ñ–∞–ª–∞“õ—ã–Ω—ã getter –∞—Ä“õ—ã–ª—ã –æ“õ—É
        print(f"–ê–π–∂–∞–Ω–Ω—ã“£ –∞“ì—ã–º–¥–∞“ì—ã –∂–∞–ª–∞“õ—ã—Å—ã: {emp1.salary} —Ç–≥")

        # 3. –ñ–∞–ª–∞“õ—ã–Ω—ã setter –∞—Ä“õ—ã–ª—ã ”©–∑–≥–µ—Ä—Ç—É
        print("\n--- –ñ–∞–ª–∞“õ—ã–Ω—ã –∂–∞“£–∞—Ä—Ç—É ---")
        emp1.salary = 400000
        print(f"–ñ–∞–ª–∞“õ—ã –∂–∞“£–∞ –º”ô–Ω–≥–µ –æ—Ä–Ω–∞—Ç—ã–ª–¥—ã: {emp1.salary} —Ç–≥")

        # 4. –ñ–∞–ª–∞“õ—ã–Ω—ã –∫”©—Ç–µ—Ä—É ”ô–¥—ñ—Å—ñ–Ω “õ–æ–ª–¥–∞–Ω—É
        print("\n--- –ñ–∞–ª–∞“õ—ã–Ω—ã ”©—Å—ñ—Ä—É ---")
        emp1.give_raise(15)

        print("\n--- “ö–∞—Ç–µ–ª–µ—Ä–¥—ñ —Ç–µ–∫—Å–µ—Ä—É (Setter —Ç–µ–∫—Å–µ—Ä—É—ñ) ---")

        # 5. –¢–µ—Ä—ñ—Å –º”ô–Ω –±–µ—Ä—É–≥–µ —Ç—ã—Ä—ã—Å—É (ValueError —Ç—É—ã–Ω–¥–∞–π–¥—ã)
        emp1.salary = -10000

    except (ValueError, TypeError) as e:
        print(f"\nüõë–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä–ï–ª–∞–º–∞–Ω–Ω—ã“£ “ö—ã–∑–º–µ—Ç–∫–µ—Ä–ª–µ—Ä –¢–ï–ö–°–ï–†–£–î–ï–ù ”®–¢–ü–ï–î–Ü (“ö–∞—Ç–µ): {e}")

    # 6. Private –∞—Ç—Ä–∏–±—É—Ç“õ–∞ —Ç—ñ–∫–µ–ª–µ–π “õ–æ–ª –∂–µ—Ç–∫—ñ–∑—É–≥–µ —Ç—ã—Ä—ã—Å—É
    try:
        print(f"\nPrivate –∞—Ç—Ä–∏–±—É—Ç—Ç—ã –æ“õ—É: {emp1.__salary}")
    except AttributeError as e:
        print(f"‚ùå “ö–∞—Ç–µ: Private –∞—Ç—Ä–∏–±—É—Ç“õ–∞ —Ç—ñ–∫–µ–ª–µ–π “õ–æ–ª –∂–µ—Ç–∫—ñ–∑—É –º“Ø–º–∫—ñ–Ω –µ–º–µ—Å. {e}")